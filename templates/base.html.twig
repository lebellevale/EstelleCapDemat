<!DOCTYPE html>
{% apply inline_css %}
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        <style>
            h1 {
                text-align: center;
            }
            #titreTableau {
                text-align: center;
                font-weight: bold;
                font-size: large;
            }
            #logoVRA {
                width: 80px;
            }
            #case {
                text-align: center;
            }

        </style>

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}
    </body>
</html>
{% endapply %}
